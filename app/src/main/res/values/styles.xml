<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="android:actionBarTabTextStyle">@color/colorWhite</item>

        <!-- 이녀석들 적용이 안됨.. -->
        <item name="android:colorPrimary">@color/colorWhite</item>
        <item name="android:colorPrimaryDark">@color/colorWhite</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>


    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/colorHatio</item>

        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    </style>


    <style name="ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
